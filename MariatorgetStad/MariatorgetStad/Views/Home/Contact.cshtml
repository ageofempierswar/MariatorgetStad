@model MariatorgetStad.Models.Contact


<div id="content" style="margin-top:20px;">

    <h1>Kontaktformulär</h1>
    <br />


    @using (Html.BeginForm("Contact", "Home", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div id="serviceList" class="row">
            <div class="col-sm-4 col-md-4">
                <h2>Städning</h2>
                <ul class="service">
                    <li><p>Butik städning</p></li>
                    <li><p>Bygg städning</p></li>
                    <li><p>Flytt städning</p></li>
                    <li><p>Industri städning</p></li>
                    <li><p>Kontor städning</p></li>
                    <li><p>Skola och Dagis städning</p></li>
                    <li><p>Trapp städning</p></li>
                    <li><p>Bygg städning</p></li>
                </ul>
            </div>

            <div class="col-sm-4 col-md-4">
                <h2>Underhåll</h2>
                <ul class="service">
                    <li><p>Golv vård</p></li>
                    <li><p>Matt tvätt</p></li>
                    <li><p>Fönster putts</p></li>
                    <li><p>Stor städning</p></li>
                    <li><p>Textil tvätt</p></li>
                </ul>
            </div>

            <div class="col-sm-4 col-md-4">
                <h2>Service</h2>
                <ul class="service">
                    <li><p>Föbrukning, Hygienartilkar </p></li>
                    <li><p>Kaffe service</p></li>
                    <li><p>Frukt service</p></li>
                    <li><p>Entremattor</p></li>
                    <li><p>Växter</p></li>
                    <li><p>Belysnings service</p></li>
                    <li><p>Tvätt service</p></li>
                </ul>
            </div>
        </div>

        <div id="serviceChoice" class="form-group">

            <h2>Välj vilken typ av tjänst eller tjänster du behöver.</h2>

            <div>
                @Html.LabelFor(model => model.Cleaning, new { style = "font-size: 18px; width: 80px; margin: 10px;" })
                @Html.CheckBoxFor(model => model.Cleaning, new { htmlAttributes = new { @class = "form-control" } })
                <br />
                @Html.LabelFor(model => model.Maintenance, new { style = "font-size: 18px; width: 80px; margin: 10px;" })
                @Html.CheckBoxFor(model => model.Maintenance, new { htmlAttributes = new { @class = "form-control" } })
                <br />
                @Html.LabelFor(model => model.Service, new { style = "font-size: 18px; width: 80px; margin: 10px;" })
                @Html.CheckBoxFor(model => model.Service, new { htmlAttributes = new { @class = "form-control" } })
            </div>

        </div>

        <div id="contact">
            <div class="form-group">

                @Html.LabelFor(model => model.EmailAdress)
                <div>
                    @Html.EditorFor(model => model.EmailAdress, new { htmlAttributes = new { @class = "form-control", @rows = 8 } })
                    @Html.ValidationMessageFor(model => model.EmailAdress, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                @Html.LabelFor(model => model.Subject)
                <div>
                    @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", @rows = 8 } })
                    @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                @Html.LabelFor(model => model.Message)
                <div>
                    @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control", @rows = 8 } })
                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

            <div id="submit" class="form-group">
                <div>
                    <input type="submit" class="btn btn-default" value="Skicka" />
                </div>
            </div>

    }

    <br class="clear" />

</div>


